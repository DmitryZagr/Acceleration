<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/message_margin"
    android:layout_marginTop="@dimen/message_distance"
    android:layout_marginBottom="@dimen/message_distance">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/outgoing_message_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/message_parent_padding"
            android:paddingLeft="@dimen/message_padding"
            android:paddingBottom="@dimen/message_padding"
            android:paddingTop="@dimen/message_padding"
            android:layout_gravity="right"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_gravity="right"
            android:text="21:03"
            android:layout_marginRight="@dimen/message_parent_padding"
            android:layout_marginBottom="@dimen/option_margin"/>

    </LinearLayout>


</RelativeLayout>