<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/message_margin"
        android:layout_marginTop="@dimen/message_distance"
        android:layout_marginBottom="@dimen/message_distance"
        android:padding="@dimen/message_padding"
        android:layout_alignParentLeft="true"
        android:textAppearance="?attr/textAppearanceListItem"
        android:background="@drawable/incoming_message_background"/>


</RelativeLayout>
